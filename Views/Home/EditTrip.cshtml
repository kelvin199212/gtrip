@{
    Layout = "~/Views/Shared/_LayoutFillow.cshtml";
    ViewData["Title"] = "編輯旅程";
}
@model List<TripViewModel>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Gtrip</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">編輯旅程</a></li>
            </ol>
        </div>

        <!-- Row for displaying trips -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card" style="height:auto !important;">
                    <div class="card-header">
                        <h4 class="card-title">我的旅遊</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="overflow-x:unset !important;">
                            <table class="table table-responsive-md">
                                <thead>
                                    <tr>
                                        <th style="width:80px;"></th>
                                        <th>旅遊名稱</th>
                                        <th>類型</th>
                                        <th>價錢</th>
                                        <th>建議參與人數</th>
                                        <th>旅遊天數</th>
                                        <th>語言</th>
                                        <th>狀態</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var trip in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @{
                                                        if (trip.EditPageShowImageUrl != null && trip.EditPageShowImageUrl != "")
                                                        {
                                                            <img src="@trip.EditPageShowImageUrl" alt="Image" style="width: 50px; height: auto;" />

                                                        }

                                                    }
                                                </td>
                                                <td>@trip.JourneyName</td>
                                                <td>@trip.TravelType</td>
                                                <td>@trip.AuditPrice</td>
                                                <td>@trip.MinPeople</td>
                                                <td>@trip.DurationSelection</td>
                                                <td>@trip.LanguageSelection</td>
                                                <td>@trip.Status</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button type="button" class="btn btn-success light sharp" data-bs-toggle="dropdown">
                                                            <svg width="20px" height="20px" viewBox="0 0 24 24" version="1.1">
                                                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                                    <rect x="0" y="0" width="24" height="24" />
                                                                    <circle fill="#000000" cx="5" cy="12" r="2" />
                                                                    <circle fill="#000000" cx="12" r="2" cy="12" />
                                                                    <circle fill="#000000" cx="19" cy="12" r="2" />
                                                                </g>
                                                            </svg>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item edit-trip" href="javascript:void(0);" data-id="@trip.Id">Edit</a>
                                                            <a class="dropdown-item" href="#">Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center">No trips available.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="d-flex align-items-center justify-content-between flex-wrap">
                                <p class="mb-2 me-3">頁面 1 / 3</p>
                                <nav aria-label="Page navigation example mb-2">
                                    <ul class="pagination mb-2 mb-sm-0">
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);"><i class="fa-solid fa-angle-left"></i></a></li>
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);">1</a></li>
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);">3</a></li>
                                        <li class="page-item"><a class="page-link" href="javascript:void(0);"><i class="fa-solid fa-angle-right"></i></a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Fillow_style
{
	
}

@section Fillow_script
    {
    <!-- Required vendors -->
    <script src="~/Fillow/vendor/global/global.min.js"></script>
    <script src="~/Fillow/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/Fillow/js/custom.min.js"></script>
    <script src="~/Fillow/js/dlabnav-init.js"></script>
    <script src="~/Fillow/js/demo.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Event listener for Edit buttons
            const editButtons = document.querySelectorAll('.edit-trip');

            editButtons.forEach(button => {
                button.addEventListener('click', function (e) {
                    const tripId = e.target.getAttribute('data-id'); // Get the tripId from the data-id attribute
                    window.location.href = `/home/EditTripDetail?tripId=${tripId}`;
                });
            });

        

        });
    </script>

}