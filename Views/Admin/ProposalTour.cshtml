@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "提案管理";
}

<div class="content-body default-height">
    <div class="cardClass">
        <div class="container">
            <h2>客人提案管理</h2>

            <!-- Proposals Table -->
            <table class="proposal-table">
                <thead>
                    <tr>
                        <th>客人名稱</th>
                        <th>旅遊團名稱</th>
                        <th>旅遊日期</th>
                        <th>人數</th>
                        <th>提案描述</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>王小明</td>
                        <td>日本文化之旅</td>
                        <td>2024-12-15</td>
                        <td>4</td>
                        <td>希望深入體驗日本傳統文化，例如茶道、花道等。</td>
                        <td>
                            <button class="btn btn-success accept-btn">接受</button>
                            <button class="btn btn-danger reject-btn">拒絕</button>
                            <button class="btn btn-primary details-btn">查看詳情</button>
                        </td>
                    </tr>
                    <tr>
                        <td>李小花</td>
                        <td>歐洲經典城市之旅</td>
                        <td>2024-11-30</td>
                        <td>2</td>
                        <td>主要參觀巴黎、羅馬和維也納的著名景點。</td>
                        <td>
                            <button class="btn btn-success accept-btn">接受</button>
                            <button class="btn btn-danger reject-btn">拒絕</button>
                            <button class="btn btn-primary details-btn">查看詳情</button>
                        </td>
                    </tr>
                    <!-- More rows dynamically generated -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Fillow_style
{
    <style>
        .cardClass {
            background-color: white;
            width: 90%;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .proposal-table {
            width: 100%;
            border-collapse: collapse;
        }

            .proposal-table th,
            .proposal-table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: center;
            }

            .proposal-table th {
                background-color: #f8f9fa;
                font-weight: bold;
            }

        .btn {
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }
    </style>
}

@section Fillow_script
{
    <script src="~/Fillow/vendor/global/global.min.js"></script>
    <script src="~/Fillow/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>


    <!-- counter -->
    <script src="~/Fillow/vendor/counter/counter.min.js"></script>
    <script src="~/Fillow/vendor/counter/waypoint.min.js"></script>

    <!-- Apex Chart -->
    <script src="~/Fillow/vendor/apexchart/apexchart.js"></script>
    <script src="~/Fillow/vendor/chart-js/chart.bundle.min.js"></script>
    <!-- Chart piety plugin files -->
    <script src="~/Fillow/vendor/peity/jquery.peity.min.js"></script>
    <!-- Dashboard 1 -->
    <script src="~/Fillow/js/dashboard/dashboard-1.js"></script>

    <script src="~/Fillow/vendor/owl-carousel/owl.carousel.js"></script>

    <script src="~/Fillow/js/custom.min.js"></script>
    <script src="~/Fillow/js/dlabnav-init.js"></script>
    <script src="~/Fillow/js/demo.js"></script>
    <script>
        $(document).ready(function () {
            // Accept Proposal
            $(document).on("click", ".accept-btn", function () {
                if (confirm("確定接受此提案嗎？")) {
                    $(this).closest("tr").remove(); // Simulate action
                    alert("提案已接受！");
                }
            });

            // Reject Proposal
            $(document).on("click", ".reject-btn", function () {
                if (confirm("確定拒絕此提案嗎？")) {
                    $(this).closest("tr").remove(); // Simulate action
                    alert("提案已拒絕！");
                }
            });

            // View Details
            $(document).on("click", ".details-btn", function () {
                alert("顯示更詳細的提案內容。"); // Placeholder for actual details view
            });
        });
    </script>
}
