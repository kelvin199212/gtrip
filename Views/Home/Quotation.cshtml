@{
	ViewData["Title"] = "Gtrippro";
	Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!-- Daterange picker -->
<link href="~/Fillow/vendor/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
<!-- Clockpicker -->
<link href="~/Fillow/vendor/clockpicker/css/bootstrap-clockpicker.min.css" rel="stylesheet">
