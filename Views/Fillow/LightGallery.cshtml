							</a>
							<a href="~/Fillow/images/big/img3.jpg" data-src="../Fillow/images/big/img3.jpg" class=" lg-item col-lg-3 col-md-6 mb-4">
								<img src="~/Fillow/images/big/img3.jpg" class="rounded" alt="" style="width:100%;">
							</a>
							<a href="~/Fillow/images/big/img4.jpg" data-src="../Fillow/images/big/img4.jpg" class="lg-item col-lg-3 col-md-6 mb-4">
								<img src="~/Fillow/images/big/img4.jpg" class="rounded" alt="" style="width:100%;">
							</a>
							<a href="~/Fillow/images/big/img5.jpg" data-src="../Fillow/images/big/img5.jpg" class="lg-item col-lg-3 col-md-6 mb-4">
								<img src="~/Fillow/images/big/img5.jpg" class="rounded" alt="" style="width:100%;">
							</a>
							<a href="~/Fillow/images/big/img6.jpg" data-src="../Fillow/images/big/img6.jpg" class="lg-item col-lg-3 col-md-6 mb-4">
								<img src="~/Fillow/images/big/img6.jpg" class="rounded" alt="" style="width:100%;">
							</a>
							<a href="~/Fillow/images/big/img7.jpg" data-src="../Fillow/images/big/img7.jpg" class="lg-item col-lg-3 col-md-6 mb-4">
								<img src="~/Fillow/images/big/img7.jpg" class="rounded" alt="" style="width:100%;">
							</a>
							<a href="~/Fillow/images/big/img8.jpg" data-src="../Fillow/images/big/img8.jpg" class=" lg-item col-lg-3 col-md-6 mb-4">
								<img src="~/Fillow/images/big/img8.jpg" class="rounded" alt="" style="width:100%;">
							</a>
						</div>
					</div>
				</div>
				<!-- /# card -->
			</div>
		</div>
	</div>
</div>

@section Fillow_style
    {
    <!-- Light Gallery -->
    <link href="~/Fillow/vendor/lightgallery/dist/css/lightgallery.css" rel="stylesheet">
    <link href="~/Fillow/vendor/lightgallery/dist/css/lg-thumbnail.css" rel="stylesheet">
    <link href="~/Fillow/vendor/lightgallery/dist/css/lg-zoom.css" rel="stylesheet">
}

@section Fillow_script
    {
	<!-- Required vendors -->
	<script src="~/Fillow/vendor/global/global.min.js"></script>
	<!-- Light Gallery -->
	<script src="~/Fillow/vendor/lightgallery/dist/lightgallery.min.js"></script>
	<script src="~/Fillow/vendor/lightgallery/dist/plugins/thumbnail/lg-thumbnail.min.js"></script>
	<script src="~/Fillow/vendor/lightgallery/dist/plugins/zoom/lg-zoom.min.js"></script>
	<script src="~/Fillow/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
	<script src="~/Fillow/js/custom.min.js"></script>
	<script src="~/Fillow/js/dlabnav-init.js"></script>
	<script src="~/Fillow/js/demo.js"></script>
	
}