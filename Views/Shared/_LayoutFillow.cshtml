@{
    @using Microsoft.Extensions.Configuration
    @inject IConfiguration Configuration
}

<!DOCTYPE html>
<html>
<head>
    <partial name="Fillow/_Meta" />
    <title>@Configuration.GetSection("DefaultValue")["Title"]</title>
    <!-- Favicon icon -->
    <link rel="shortcut icon" type="image/png" href="~/Fillow/images/favicon.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link href="~/Fillow/vendor/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet">
    <!--**********************************
        Style script start
    ***********************************-->
    @RenderSection("Fillow_style", false)
    <!--**********************************
        Style script end
    ***********************************-->
    <!-- Style css -->
    <link href="~/Fillow/css/style.css" rel="stylesheet">
</head>
<body>
    <partial name="Fillow/_PreLoader" />
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">
        <partial name="Fillow/_NevHeader" />
        <partial name="Fillow/_Chatbox" />
        <partial name="Fillow/_Header" />
        <partial name="Fillow/_Sidebar" />
        <!--**********************************
            Content body start
        ***********************************-->
        @RenderBody()
        <!--**********************************
            Content body end
        ***********************************-->
        <partial name="Fillow/_Footer" />
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->
    @RenderSection("Fillow_script", false)
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
