                </tbody>
            </table>
        </div>
    </div>
</div>

@section Fillow_style
{
    <style>
        .cardClass {
            background-color: white;
            width: 90%;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .search-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .search-bar input {
                width: 75%;
                padding: 8px;
                border-radius: 5px;
                border: 1px solid #ddd;
            }

        .btn {
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }

        .member-table {
            width: 100%;
            border-collapse: collapse;
        }

            .member-table th,
            .member-table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: center;
            }

            .member-table th {
                background-color: #f8f9fa;
                font-weight: bold;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
}

@section Fillow_script
{
    <script src="~/Fillow/vendor/global/global.min.js"></script>
    <script src="~/Fillow/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>


    <!-- counter -->
    <script src="~/Fillow/vendor/counter/counter.min.js"></script>
    <script src="~/Fillow/vendor/counter/waypoint.min.js"></script>

    <!-- Apex Chart -->
    <script src="~/Fillow/vendor/apexchart/apexchart.js"></script>
    <script src="~/Fillow/vendor/chart-js/chart.bundle.min.js"></script>
    <!-- Chart piety plugin files -->
    <script src="~/Fillow/vendor/peity/jquery.peity.min.js"></script>
    <!-- Dashboard 1 -->
    <script src="~/Fillow/js/dashboard/dashboard-1.js"></script>

    <script src="~/Fillow/vendor/owl-carousel/owl.carousel.js"></script>

    <script src="~/Fillow/js/custom.min.js"></script>
    <script src="~/Fillow/js/dlabnav-init.js"></script>
    <script src="~/Fillow/js/demo.js"></script>
    <script>
        $(document).ready(function () {
            // Search Functionality
            $("#searchBtn").on("click", function () {
                const searchValue = $("#searchMember").val().toLowerCase();
                $(".member-table tbody tr").each(function () {
                    const rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.includes(searchValue));
                });
            });

            // Edit Member
            $(document).on("click", ".edit-btn", function () {
                const row = $(this).closest("tr");
                const name = row.find("td:nth-child(1)").text();
                const email = row.find("td:nth-child(2)").text();
                const phone = row.find("td:nth-child(3)").text();

                alert(`編輯會員:\n名稱: ${name}\n電子郵件: ${email}\n電話: ${phone}`);
                // Implement your edit logic here
            });

            // Delete Member
            $(document).on("click", ".delete-btn", function () {
                if (confirm("確定要刪除此會員嗎？")) {
                    $(this).closest("tr").remove();
                }
            });
        });
    </script>
}
