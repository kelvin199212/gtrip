@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "WeChat 支付配置頁面";
}

<div class="content-body default-height">
    <div class="cardClass">
        <div class="container">
            <!-- WeChat Payment API Keys Configuration -->
            <div class="wechat-config-section">
                <h4>WeChat API 配置</h4>
                <form>
                    <div class="form-group">
                        <label for="wechat-app-id">App ID</label>
                        <input type="text" id="wechat-app-id" class="form-control" placeholder="輸入 WeChat App ID" required>
                    </div>

                    <div class="form-group">
                        <label for="wechat-mch-id">商戶號 (MCH ID)</label>
                        <input type="text" id="wechat-mch-id" class="form-control" placeholder="輸入商戶號" required>
                    </div>

                    <div class="form-group">
                        <label for="wechat-api-key">API 密鑰</label>
                        <input type="text" id="wechat-api-key" class="form-control" placeholder="輸入 API 密鑰" required>
                    </div>

                    <div class="form-group">
                        <label for="wechat-cert-path">證書路徑</label>
                        <input type="text" id="wechat-cert-path" class="form-control" placeholder="輸入證書路徑" required>
                    </div>

                    <div class="form-group">
                        <label for="wechat-sign-type">簽名算法</label>
                        <select id="wechat-sign-type" class="form-control">
                            <option value="MD5">MD5</option>
                            <option value="HMAC-SHA256">HMAC-SHA256</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="currency">貨幣選擇</label>
                        <select id="currency" class="form-control">
                            <option value="cny">人民幣 (CNY)</option>
                            <option value="usd">美元 (USD)</option>
                            <option value="hkd">港元 (HKD)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="wechat-notify-url">支付通知 URL</label>
                        <input type="url" id="wechat-notify-url" class="form-control" placeholder="輸入 WeChat 支付通知 URL">
                    </div>

                    <div class="form-group">
                        <label for="test-mode">測試模式</label>
                        <input type="checkbox" id="test-mode"> 啟用測試模式
                    </div>

                    <div class="form-group">
                        <label>啟用支付方式</label><br>
                        <input type="checkbox" id="wechat-pay" checked> WeChat Pay
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">儲存配置</button>
                    </div>
                </form>
            </div>

            <hr>

            <!-- Configuration Status -->
            <div class="status-section">
                <h4>當前配置狀態</h4>
                <div id="status">
                    <p>API 金鑰: <span class="text-success">已設置</span></p>
                    <p>測試模式: <span class="text-success">已啟用</span></p>
                    <p>支付方式: WeChat Pay</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Fillow_style
{
    <style>
        .cardClass {
            background-color: white;
            width: 90%;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 18px;
            font-weight: 500;
        }

        h4 {
            font-size: 16px;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .btn {
            padding: 10px 20px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }

        .status-section {
            margin-top: 20px;
            padding: 10px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        .text-success {
            color: #28a745;
        }
    </style>
}

