            font-size: 16px;
            margin-bottom: 5px;
        }

        .review-card span {
            font-size: 12px;
            color: #888;
        }

    .image-container {
        display: flex; /* Use flexbox for a side-by-side layout */
        gap: 10px; /* Space between the large image and the small images */
        align-items: center; /* Vertically align both sections */
    }

    .large-image {
        flex: 3; /* This takes up more space for the large image */
    }

        .large-image img {
            width: 100%; /* Make the large image fill its container */
            height: auto; /* Maintain the aspect ratio */
            border-radius: 8px; /* Optional: Add rounded corners */
        }

    .small-images-grid {
        display: grid; /* Use grid for the 2x2 layout */
        grid-template-rows: repeat(2, 1fr); /* 2 rows, each taking equal space */
        gap: 10px; /* Space between the small images */
        flex: 0.7; /* This takes less space compared to the large image */
    }

        .small-images-grid img {
            width: 100%; /* Make each small image fill its grid cell */
            height: auto; /* Maintain aspect ratio */
            border-radius: 8px; /* Optional: Add rounded corners */
        }

        .heart-icon::before {
            position: absolute;
            top: 0;
            right: 10px;
            content: '\2665'; /* Unicode for heart symbol */
            font-size: 48px; /* Increase the size here */
            color: lightgrey;
            cursor: pointer; /* Cursor changes to pointer on hover */
            transition: color 0.3s ease;
        }

        /* Active state when heart is clicked */
        .heart-icon.active::before {
            color: #ff5a5f; /* Default heart color (red) */
        }

    /* Profile card container */
    .profile-card {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        position: relative; /* Set to relative for absolute positioning of follow button */
        text-align: center;
    }
    /* Initially hide the 'more' text */
    #more {
        display: none;
    }

    /* Style for the 'Read More' link */
    #readMoreLink {
        color: #007bff;
        text-decoration: underline;
        cursor: pointer;
        font-size: 14px;
    }

        /* Hover effect for the link */
        #readMoreLink:hover {
            color: #0056b3;
            text-decoration: none;
        }

    .service-add-wishlist {
