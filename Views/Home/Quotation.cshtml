        function increment(id) {
            const input = document.getElementById(id);
            let value = parseInt(input.value, 10);
            value = isNaN(value) ? 0 : value;
            value++;
            input.value = value;
        }

        function decrement(id) {
            const input = document.getElementById(id);
            let value = parseInt(input.value, 10);
            value = isNaN(value) ? 0 : value;
            value = value > 0 ? value - 1 : 0;
            input.value = value;
        }

	</script>

  

