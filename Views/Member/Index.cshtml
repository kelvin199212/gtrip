					<span>Silver</span>
					<div class="booking-requirement">2个预订</div>
				</div>
				<div class="step">
					<div class="icon"></div>
					<span>Gold</span>
					<div class="booking-requirement">5个预订</div>
				</div>
				<div class="step">
					<div class="icon"></div>
					<span>Platinum</span>
					<div class="booking-requirement">10个预订</div>
				</div>
			</div>
			<div class="progressbar-track">
				<div class="progressbar-fill"></div>
			</div>
		</div>

