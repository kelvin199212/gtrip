@{
	Layout = "~/Views/Shared/_Layout3.cshtml";
	ViewData["Title"] = "主頁";
}

<div class="content-body default-height">
	<div class="card">
		<div class="headerbar">
			<div style="display: flex; align-items: center;">
				<div class="profile-pic">S</div>
				<h1>Siu Fung你好</h1>
				<div class="status-badge">
					VIP Gold
				</div>
			</div>
		</div>

		<div class="content">
			<div>
				<strong>AgodaVIP Gold</strong>
				<span>你的状态</span>
			</div>
			<div>
				<strong>2024年8月7日</strong>
				<span>等级有效期至</span>
			</div>
